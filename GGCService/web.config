<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <log4net>
    <root>
      <level value="Error"/>
      <appender-ref ref="LogFileAppender"/>                 
    </root>
      <appender name="LogFileAppender" type="log4net.Appender.FileAppender">
      <param name="File" value="Logs\\Log4Net.log"/>
      <param name="MaxSizeRollBackups" value="10"/>
      <param name="MaximumFileSize" value="1000"/>
      <param name="RollingStyle" value="Size"/>
      <param name="StaticLogFileName" value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="&#xA;Error Details :-&#xA;  Date:  %date &#xA;  Thread: [%thread]&#xA;  Level: %-5level &#xA;  Logger: %logger &#xA;  Message: %message%newline%newline**********************************************************"/>
      </layout>
    </appender>
    <logger name="File">
      <level value="All"/>
      <appender-ref ref="LogFileAppender"/>
    </logger>      
  </log4net>
  <appSettings>
    <!--Dev Server-->
    <add key="DevpGridConnectivity" value="Server=localhost;User Id=root;Password=msetcl@123;Database=gridconnectivity"/>
    <!--Prod Server-->
    <!--<add key="DevpExamRegistration" value="Server=10.10.100.6;User Id=root;Password=msetcl@123;Database=examregistration"/>-->
  </appSettings>
  <!--
    For a description of web.config changes see http://go.microsoft.com/fwlink/?LinkId=235367.

    The following attributes can be set on the <httpRuntime> tag.
      <system.Web>
        <httpRuntime targetFramework="4.8.1" />
      </system.Web>
  -->
  <system.web>
    <compilation debug="true" targetFramework="4.8.1">
      <assemblies>
        <add assembly="System.Web.Entity, Version=4.0.0.0, Culture=neutral, PublicKeyToken=B77A5C561934E089"/>
      </assemblies>
    </compilation>
    <pages controlRenderingCompatibilityVersion="4.0"/>
  </system.web>
</configuration>